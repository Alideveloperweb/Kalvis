@page "{handler?}/{id?}"
@model Kalvis.Web.Pages.Cart.ZarinPalModel
@{
    Layout = null;
}

<!doctype html>
<html lang="fa">

<head>

    <partial name="_css" />

</head>

<body>

    <!-- Preloader -->
    <div class="preloader">
        <div class="loader">
            <div class="shadow"></div>
            <div class="box"></div>
        </div>
    </div>
    <!-- End Preloader -->
    <partial name="_Header" />
    <partial name="_SearchOverLay" />
    <!-- Start Page Title Area -->
    <div class="page-title-area item-bg1 jarallax" data-jarallax='{"speed": 0.3}'>
        <div class="container">
            <div class="page-title-content">
                <ul>
                    <li><a href="index.html">صفحه اصلی</a></li>
                    <li>فروشگاه</li>
                </ul>
                <h2>بررسی محصولات</h2>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->
    <!-- Start Checkout Area -->
    <section class="checkout-area ptb-100">
        <div class="container">


            <form>
                <div class="row">
                    <div class="col-lg-12 col-md-12" style="margin:auto;">
                        <div class="billing-details" style="text-align:center;">
                            @if (Model.Verification.Status.ToString() != "100")
                            {
                                <span class="alert alert-danger">خطا در انجام عملیات اگر مبلغی از حساب شما کسر شده ظرف مدت 72 ساعت به حساب شما برمیگردد</span>

                            }
                            else
                            {
                                <div class=" alert alert-success">
                                    <span>پرداخت شما موفقیت آمیز بود</span>
                                    <span>کد پیگیری شما : @Model.Verification.RefID</span>
                                </div>

                            }
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </section>
    <!-- End Checkout Area -->

    <partial name="_Footer" />

    <div class="go-top"><i class='bx bx-up-arrow-alt'></i></div>

    <partial name="_js" />

</body>

</html>