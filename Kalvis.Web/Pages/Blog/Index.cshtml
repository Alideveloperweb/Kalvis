@page "{id}"
@model Kalvis.Web.Pages.Blog.IndexModel
@{
    Layout = null;
}

<!doctype html>
<html lang="fa">

<head>

    <partial name="_css" />

</head>

<body>

    <!-- Preloader -->
    <div class="preloader">
        <div class="loader">
            <div class="shadow"></div>
            <div class="box"></div>
        </div>
    </div>
    <!-- End Preloader -->
    <partial name="_Header" />
    <partial name="_SearchOverLay" />
    <!-- Start Page Title Area -->
    <div class="page-title-area item-bg2 jarallax" data-jarallax='{"speed": 0.3}'>
        <div class="container">
            <div class="page-title-content">
                <ul>
                    <li><a href="index.html">صفحه اصلی</a></li>
                    <li>وبلاگ</li>
                </ul>
                <h2>وبلاگ جداگانه</h2>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->
    <!-- Start Blog Details Area -->
    <section class="blog-details-area ptb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    <div class="blog-details-desc">
                        <div class="article-image">
                            <img src="/@Model.GetBlog.BlogImage" alt="image">
                        </div>

                        <div class="article-content">
                            <div class="entry-meta">
                                <ul>
                                    <li>
                                        <i class='bx bx-folder-open'></i>
                                        <span>دسته بندی</span>
                                        <a href="#">@Model.GetBlog.CategoryName</a>
                                    </li>

                                    <li>
                                        <i class='bx bx-calendar'></i>
                                        <span>آخرین آپدیت</span>
                                        <a href="#">@Model.GetBlog.LastUpdate</a>
                                    </li>
                                </ul>
                            </div>

                            @Html.Raw(Model.GetBlog.BlogDescription)

                        </div>

                        <div class="article-footer">
                            <div class="article-tags">
                                <span><i class='bx bx-purchase-tag'></i></span>
                                @{
                                    var Array = Model.GetBlog.Tags.Split(",");
                                }

                                @foreach (var item in Array)
                                {
                                    <a href="#">@item</a><span>,</span>
                                }

                            </div>

                            <div class="article-share">
                                <ul class="social">
                                    <li><span>اشتراک گذاری:</span></li>
                                    <li><a href="#" class="facebook" target="_blank"><i class='bx bxl-facebook'></i></a></li>
                                    <li><a href="#" class="twitter" target="_blank"><i class='bx bxl-twitter'></i></a></li>
                                    <li><a href="#" class="linkedin" target="_blank"><i class='bx bxl-linkedin'></i></a></li>
                                    <li><a href="#" class="instagram" target="_blank"><i class='bx bxl-instagram'></i></a></li>
                                </ul>
                            </div>
                        </div>



