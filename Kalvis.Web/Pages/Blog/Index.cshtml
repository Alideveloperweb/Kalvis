                        </section>

                        <section class="widget widget_tag_cloud">
                            <h3 class="widget-title">برچسب ها</h3>

                            <div class="tagcloud">

                                @{
                                    var Array2 = Model.GetBlog.Tags.Split(",");
                                }

                                @foreach (var item in Array2)
                                {
                                    <a href="#">@item <span class="tag-link-count"></span></a>
                                }

