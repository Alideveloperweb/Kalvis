@page "{id}"
@model Kalvis.Web.Areas.Admin.Pages.Blog.EditModel
@{
}

<div class="content-wrapper" style="min-height: 701px;">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 mt-2d">
                    @await Component.InvokeAsync("OperationResultComponent")
                    <div class="card card-primary">

                        <div class="card-header">
                            <h3 class="card-title">ثبت دسته بندی جدید</h3>
                        </div>

                        <form method="post" asp-page="Edit" enctype="multipart/form-data">
                            <input type="hidden" asp-for="EditBlog.BlogId" />
                            <div class="card-body">

                                <div class="row col-lg-12">

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label asp-for="EditBlog.BlogTitle"></label>
                                            <input asp-for="EditBlog.BlogTitle" class="form-control">
                                            <span asp-validation-for="EditBlog.BlogTitle" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="EditBlog.Uploder"></label>
                                            <input asp-for="EditBlog.Uploder" type="file" class="form-control">
                                            <span asp-validation-for="EditBlog.Uploder" class="text-danger"></span>

                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label asp-for="EditBlog.CategoryId"></label>
                                            <select class="form-control" asp-for="EditBlog.CategoryId"
                                                    asp-items="@(new SelectList(Model.EditBlog.GetAllCategory,"CategoryId","EnCategoryName"))"></select>
                                            <span asp-validation-for="EditBlog.CategoryId" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="EditBlog.Tags"></label>
                                            <textarea asp-for="EditBlog.Tags" class="form-control"></textarea>
                                            <span asp-validation-for="EditBlog.Tags" class="text-danger"></span>

                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label asp-for="EditBlog.IsComment"></label>
                                            <input type="checkbox" asp-for="EditBlog.IsComment">
                                            <span asp-validation-for="EditBlog.IsComment" class="text-danger"></span>

                                        </div>

                                        <div class="form-group">
                                            <label asp-for="EditBlog.IsActive"></label>
                                            <input type="checkbox" asp-for="EditBlog.IsActive">
                                            <span asp-validation-for="EditBlog.IsActive" class="text-danger"></span>

                                        </div>
                                    </div>

                                    <div class="col-lg-12">

                                        <div class="form-group">
                                            <label asp-for="EditBlog.BlogDes"></label>
                                            <textarea asp-for="EditBlog.BlogDes" class="form-control"></textarea>
                                            <span asp-validation-for="EditBlog.BlogDes" class="text-danger"></span>

                                        </div>


                                    </div>

                                </div>

                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>