@page "{id}"
@model Kalvis.Web.Areas.Admin.Pages.Category.RemoveModel
@{
}


<div class="content-wrapper" style="min-height: 701px;">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 mt-2d">
                    @await Component.InvokeAsync("OperationResultComponent")
                    <div class="card card-primary">

                        <div class="card-header">
                            <h3 class="card-title">ثبت دسته بندی جدید</h3>
                        </div>

                        <form method="post" asp-page="Remove" role="form">
                            <input type="hidden" readonly="readonly" asp-for="RemoveCategory.CategoryId" />
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="RemoveCategory.FaCategoryName"></label>
                                    <input readonly="readonly" asp-for="RemoveCategory.FaCategoryName" class="form-control">
                                    <span asp-validation-for="RemoveCategory.FaCategoryName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="RemoveCategory.EnCategoryName"></label>
                                    <input readonly="readonly" asp-for="RemoveCategory.EnCategoryName" class="form-control">
                                    <span asp-validation-for="RemoveCategory.EnCategoryName" class="text-danger"></span>

                                </div>

                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ارسال</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

