@page
@model Kalvis.Web.Areas.Admin.Pages.Category.CreateModel
@{
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>فرم‌های عمومی</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a href="#">خانه</a></li>
                        <li class="breadcrumb-item active">فرم‌های عمومی</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">ثبت دسته بندی جدید</h3>
                        </div>
                        <form asp-page="Create" method="post" role="form">
                            <div class="card-body">

                                <div class="form-group">
                                    <label asp-for="categoryItem.FaCategoryName"></label>
                                    <input asp-for="categoryItem.FaCategoryName" type="tel" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label asp-for="categoryItem.EnCategoryName"></label>
                                    <input asp-for="categoryItem.EnCategoryName" type="tel" class="form-control">
                                </div>

                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">ثبت اطلاعات</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
