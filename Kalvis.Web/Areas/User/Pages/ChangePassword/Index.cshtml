@page
@model Kalvis.Web.Areas.User.Pages.ChangePassword.IndexModel
@{
}

<div class="tab-pane fade show text-right col-lg-9 mt-5" id="user-change">
    <!----- Start user change ----->
    <div class="card mb-3">
        <div class="card-header">
            <p class="font-13 vazir mt-2 mr-2"> تغییر پسورد :</p>
        </div>
        <div class="card-body">
            @await Component.InvokeAsync("OperationUserComponent")
            <form asp-page="Index" method="post">

                <div class="form-group">
                    <label asp-for="Password.OldPassword" class="font-14 vazir mr-2"></label>
                    <input asp-for="Password.OldPassword" class="form-control form-control-lg">
                    <span asp-validation-for="Password.OldPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password.NewPassword" class="font-14 vazir mr-2"></label>
                    <input asp-for="Password.NewPassword" type="text" class="form-control form-control-lg">
                    <span asp-validation-for="Password.NewPassword" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Password.ConfirmPassword" class="font-14 vazir mr-2"></label>
                    <input asp-for="Password.ConfirmPassword" type="text" class="form-control form-control-lg">
                    <span asp-validation-for="Password.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-outline-info btn-block my-4 font-13"> ثبت تغییرات </button>
                </div>
            </form>
        </div>
    </div>
</div>