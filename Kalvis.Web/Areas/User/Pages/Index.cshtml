@page
@model Kalvis.Web.Areas.User.Pages.IndexModel
@{
}


<div class="col-12 col-lg-9">

    <div class="tab-content mt-5">

        <div class="tab-pane fade show active" id="pishkhan">
            <!----- Start pishkhan ----->
            <div class="card mb-3">

                <div class="card-body">
                    <div class="row">

                        <div class="col-12 col-md-3 pishkhan">
                            <div class="card bg-light border-warning">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <i class="fa fa-university text-secondary"></i>
                                    <div class="d-inline-block text-center">
                                        <p class="mb-0 font-12"> @Model.AccountDetail.CourseCount دوره  </p>
                                        <small class="font-12">  موجود در سایت  </small>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-12 col-md-3 pishkhan">
                            <div class="card bg-light border-warning">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <i class="fa fa-graduation-cap text-secondary"></i>
                                    <div class="d-inline-block text-center">
                                        <p class="mb-0 font-12"> @Model.AccountDetail.UserCourseCount دوره  </p>
                                        <small class="font-12"> شرکت کرده اید</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-3 pishkhan">
                            <div class="card bg-light border-warning">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <i class="fa fa-cart-plus text-secondary"></i>
                                    <div class="d-inline-block text-center">
                                        <p class="mb-0 font-12">@Model.AccountDetail.AwaitingPayeCount دوره </p>
                                        <small class="font-12">در انتظار پرداخت</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-3 pishkhan">
                            <div class="card bg-light border-warning">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <i class="fa fa-credit-card text-secondary"></i>
                                    <div class="d-inline-block text-center">
                                        <p class="mb-0 font-12"> @Model.AccountDetail.WalletBalance.ToString("N0") تومان</p>
                                        <small class="font-12">موجودی شما </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row mt-3">
                        <div class="col-12 bg-light news py-3">
                            <i class=" fa fa-bell align-middle text-warning"></i>
                            <span class="font-14">جدیدترین اطلاعیه ها</span>
                            @foreach (var item in Model.AccountDetail.GetAllNotification)
                            {
                                <div>
                                    <p class="font-13 vazir mt-4 mr-2" style="display:inline;"> @item.NotificationTitle</p>
                                    <span class="mr-3 font-11">@item.NotificationCreate</span>
                                    <p class="font-12 text-secondary mr-2">@item.NotificationText</p>
                                </div>
                            }

                        </div>
                    </div>


                </div>

            </div>
        </div><!----- End pishkhan ----->

        <div class="tab-pane fade show " id="shopping-cart">
            <!----- Start shopping cart----->

            <div class="card mb-3">

                <div class="card-header">
                    <p class="font-13 vazir mt-2 mr-2">سبد خرید شما :</p>
                </div>

                <div class="card-body">

                    <div class="table-responsive">
                        <table id="myTable" class="table text-center table-bordered">
                            <thead class="bg-light">
                                <tr>
                                    <td>عکس</td>
                                    <td>نام دوره</td>
                                    <td>تعداد</td>
                                    <td>قیمت دوره</td>
                                    <td class="text-right"><span id="amount" class="amount">قیمت کل</span> </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="product-img">
                                            <div class="img-prdct"><img src="img/flutter.png"></div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="vazir">آموزش حرفه ای Flutter</p>
                                    </td>
                                    <td>
                                        <div class="button-container">
                                            <button class="cart-qty-plus" type="button" value="+">+</button>
                                            <input type="text" name="qty" min="0" class="qty form-control" value="0" />
                                            <button class="cart-qty-minus" type="button" value="-">-</button>
                                        </div>
                                    </td>
                                    <td>
                                        <input type="text" value="64000" class="price form-control font-13 text-center" disabled>
                                    </td>
                                    <td> <span id="amount" class="amount">0</span>تومان</td>

                                </tr>

                                <tr>
                                    <td>
                                        <div class="product-img">
                                            <div class="img-prdct"><img src="img/laravel.jpg"></div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="vazir">ساخت فروشگاه با لاراول</p>
                                    </td>
                                    <td>
                                        <div class="button-container">
                                            <button class="cart-qty-plus" type="button" value="+">+</button>
                                            <input type="text" name="qty" min="0" class="qty form-control" value="0" />
                                            <button class="cart-qty-minus" type="button" value="-">-</button>
                                        </div>
                                    </td>
                                    <td>
                                        <input type="text" value="64000" class="price form-control font-13 text-center" disabled>
                                    </td>
                                    <td><span id="amount" class="amount">0</span>تومان</td>

                                </tr>

                            </tbody>
                        </table>

                        <span class="font-13">قیمت کل :</span><span id="total" class="total mx-2">0</span><span class="font-13">تومان</span>

                        <button class="btn btn-outline-info btn-lg btn-block mt-3 font-13"> پرداخت</button>

                    </div>

                </div>


            </div>

        </div><!----- End shopping cart ----->

    </div>

</div>